<h1>Rock, Paper, Scissors</h1>

<body>

<% if @name == "" %>
		<% @name = "Player" %>
	<%  end %>
	<h2><%= @name %>, Select Your Weapon:</h2>

	<form action="/game_result" method="post">
	
	<input type="image" src="images/rock.png" width="150" height="150" name="player_gesture" alt="rock" value="rock" id="rock">

	<input type="image" src="images/paper.png" width="150" height="150" name="player_gesture" alt="paper" value="paper" id="paper">

	<input type="image" src="images/scissors.png" width="150" height="150" name="player_gesture" alt="scissors" value="scissors" id="scissors">
      
    </form>

</body>
